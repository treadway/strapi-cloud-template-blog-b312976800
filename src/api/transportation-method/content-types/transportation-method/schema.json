{
	"kind": "collectionType",
	"collectionName": "transportation_methods",
	"info": {
		"singularName": "transportation-method",
		"pluralName": "transportation-methods",
		"displayName": "Transportation Method",
		"description": "Available transportation methods for earning points"
	},
	"options": {
		"draftAndPublish": false
	},
	"attributes": {
