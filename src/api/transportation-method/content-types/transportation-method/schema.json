{
	"kind": "collectionType",
	"collectionName": "rewards",
	"info": {
		"singularName": "reward",
		"pluralName": "rewards",
		"displayName": "Reward",
		"description": "Rewards that users can redeem with points"
	},
	"options": {
		"draftAndPublish": true
	},
	"attributes": {
		"title": {
			"type": "string",
			"required": true
		},
		"subtitle": {
			"type": "string",
			"required": true
		},
		"description": {
			"type": "text",
			"required": true
		},
		"pointsCost": {
			"type": "integer",
			"required": true,
			"min": 0
		},
		"category": {
			"type": "string",
			"required": true
		},
		"isActive": {
			"type": "boolean",
			"default": true
		},
		"image": {
			"type": "media",
			"multiple": false,
			"required": false,
			"allowedTypes": ["images"]
		},
		"imagePosition": {
			"type": "enumeration",
			"enum": ["top", "center", "bottom", "left", "right"],
			"default": "center"
		},
		"imageScale": {
			"type": "decimal",
			"min": 0.1,
			"max": 3.0,
			"default": 1.0
		},
		"imageFocus": {
			"type": "json",
			"default": { "x": 0.5, "y": 0.5 }
		},
		"pointTransactions": {
			"type": "relation",
			"relation": "oneToMany",
			"target": "api::point-transaction.point-transaction",
			"mappedBy": "relatedReward"
		}
	}
}
