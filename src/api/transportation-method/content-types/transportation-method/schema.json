			"type": "string",
			"required": true,
			"unique": true
		},
		"subtitle": {
			"type": "string"
		},
		"pointsPerMile": {
			"type": "decimal",
			"required": true,
			"default": 100,
			"min": 0
		},
		"isActive": {
			"type": "boolean",
			"default": true
		},
		"icon": {
			"type": "string"
		},
		"trips": {
			"type": "relation",
			"relation": "oneToMany",
			"target": "api::trip.trip",
			"mappedBy": "transportationMethod"
		}
	}
