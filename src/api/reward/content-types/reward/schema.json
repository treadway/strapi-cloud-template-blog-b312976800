{
	"kind": "collectionType",
	"collectionName": "rewards",
	"info": {
		"singularName": "reward",
		"pluralName": "rewards",
		"displayName": "Reward",
		"description": "Redeemable rewards for points"
	},
	"options": {
		"draftAndPublish": false
	},
	"attributes": {
		"title": {
			"type": "string",
			"required": true
		},
		"subtitle": {
			"type": "string"
		},
		"description": {
			"type": "richtext",
			"required": true
		},
		"pointsCost": {
			"type": "integer",
			"required": true,
			"min": 1
		},
		"image": {
			"type": "media",
			"multiple": false,
			"required": false,
			"allowedTypes": ["images"]
		},
		"category": {
			"type": "string"
		},
		"isActive": {
			"type": "boolean",
			"default": true
		},
		"inventory": {
			"type": "integer",
			"min": 0
		},
		"pointTransactions": {
			"type": "relation",
			"relation": "oneToMany",
			"target": "api::point-transaction.point-transaction",
			"mappedBy": "relatedReward"
		}
	}
}
